def init(module):
    module.name = "stdc++"
    module.parent = "test"


def prepare(module, options):
    target = options[":target"].identifier
    if target["platform"] != "avr":
        return False

    module.depends(":stdc++")
    return True


def build(env):
    env.outbasepath = "modm/test/stdc++"
    env.copy('.', ignore=env.ignore_patterns("*.lb"))
