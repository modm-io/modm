def init(module):
    module.name = "test"


def prepare(module, options):
    module.depends(":unittest")
    return True


def build(env):
    env.outbasepath = "test"
    env.copy('SConstruct')

    env.append_metadata_unique("include_path", "test")

    env.copy(localpath("../templates/unittest/runner_hosted.cpp.in"), "runner.cpp.in")
