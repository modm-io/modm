def init(module):
    module.name = "processing"
    module.parent = "test"


def prepare(module, options):
    module.depends(
        ":architecture",
        ":math:utils",
        ":processing:protothread",
        ":processing:resumable",
        ":processing:timer",
        ":processing:scheduler",
        ":utils")
    return True


def build(env):
    env.outbasepath = "modm/test/modm/processing"
    env.copy('.', ignore=env.ignore_patterns("*.lb"))
