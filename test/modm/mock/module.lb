class Clock(Module):
    def init(self, module):
        module.name = "clock"
        module.description = "System Tick Mockup"

    def prepare(self, module, options):
        module.depends(":architecture:clock")
        return True

    def build(self, env):
        env.outbasepath = "modm-test/src/modm-test/mock"
        env.copy("clock.hpp")
        env.copy("clock.cpp")

