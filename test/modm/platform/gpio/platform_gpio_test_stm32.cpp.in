		TEST_ASSERT_TRUE((GPIO{{port}}->MODER & (3ul << {{pin*2}})) == 0ul);
	%% if target["family"] in ["l4"] and target["name"] in ["71", "75", "76", "85", "86"]
		TEST_ASSERT_TRUE((GPIO{{port}}->ASCR & (1ul << {{pin}})) == 0ul);
