def init(module):
    module.name = "platform"
    module.parent = "test"


def prepare(module, options):
    module.depends(":platform:can.generic")
    return True


def build(env):
    env.outbasepath = "test/modm/platform"
    env.copy('.', ignore=env.ignore_patterns("*.lb"))
