def init(module):
    module.name = "spi"
    module.parent = "test:platform"

def prepare(module, options):
    module.depends(
		"modm:architecture:spi",
        "modm:container")

    return True

def build(env):
    env.outbasepath = "modm/test/modm/platform/spi/mock"
    env.copy("spi_master.hpp")
    env.copy("spi_master.cpp")
