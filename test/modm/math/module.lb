def init(module):
    module.name = "math"
    module.parent = "test"


def prepare(module, options):
    module.depends(
        ":math:filter",
        ":math:geometry",
        ":math:interpolation",
        ":math:saturated",
        ":math:matrix",
        ":math:utils")
    return True


def build(env):
    env.outbasepath = "test/modm/math"
    env.copy('.', ignore=env.ignore_patterns("*.lb"))
