def init(module):
    module.name = ":test:math"


def prepare(module, options):
    module.depends(
        "modm:math:filter",
        "modm:math:geometry",
        "modm:math:interpolation",
        "modm:math:saturation",
        "modm:math:matrix",
        "modm:math:algorithm",
        "modm:math:utils")
    return True


def build(env):
    env.outbasepath = "modm-test/src/modm-test/math"
    env.copy('.')
