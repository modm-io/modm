def init(module):
    module.name = "architecture"
    module.parent = "test"


def prepare(module, options):
    module.depends(
        ":architecture:accessor",
        ":architecture:atomic",
        ":architecture:can",
        ":architecture:clock",
        ":architecture:heap",
        ":architecture:register")
    return True


def build(env):
    env.outbasepath = "modm/test/modm/architecture"

    ignore_patterns = ["*.lb", "*.cfg", "*.xml"]
    target = env[":target"].identifier
    if target["platform"] == "hosted":
        # Test does not work on hosted
        ignore_patterns.append("*driver/clock_test.*")

    env.copy('.', ignore=env.ignore_patterns(*ignore_patterns))
