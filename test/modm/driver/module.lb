def init(module):
    module.name = "driver"
    module.parent = "test"


def prepare(module, options):
    module.depends(
        ":architecture:clock",
        ":debug",
        ":driver:ad7280a",
        ":driver:bme280",
        ":driver:bmp085",
        ":driver:lawicel",
        ":driver:ltc2984",
        ":driver:mcp2515",
        ":platform:gpio")
    return True


def build(env):
    env.outbasepath = "modm/test/modm/driver"
    env.copy('.', ignore=env.ignore_patterns("*.lb"))
