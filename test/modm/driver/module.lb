def init(module):
    module.name = ":test:driver"


def prepare(module, options):
    module.depends(
        "modm:architecture:clock",
        "modm:debug",
        "modm:driver:ad7280a",
        "modm:driver:bme280",
        "modm:driver:bmp085",
        "modm:driver:lawicel",
        "modm:driver:ltc2984",
        "modm:driver:drv832x_spi",
        "modm:driver:mcp2515",
        "modm:driver:block.allocator",
        "modm:platform:gpio",
        ":mock:spi.device",
        ":mock:spi.master")
    return True


def build(env):
    env.outbasepath = "modm-test/src/modm-test/driver"
    patterns = []
    if env[":target"].identifier["platform"] == "avr":
        patterns += ["*pressure*"]
    env.copy('.', ignore=env.ignore_patterns(*patterns))
