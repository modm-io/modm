def init(module):
    module.name = ":test:ui"


def prepare(module, options):
    module.depends(
        "modm:ui:button",
        "modm:ui:color",
        "modm:math",
        "modm:ui:time")
    return True


def build(env):
    env.outbasepath = "modm-test/src/modm-test/ui"
    env.copy('.')
