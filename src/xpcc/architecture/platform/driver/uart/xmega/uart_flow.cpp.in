{
	static xpcc::atomic::Queue<uint8_t, UART{{ id }}_RX_BUFFER_SIZE> rxBuffer;
	static xpcc::atomic::Queue<uint8_t, UART{{ id }}_TX_BUFFER_SIZE> txBuffer;
	
	GPIO__INPUT (RXD, {{ id[0] }}, {{ number * 4 + 2 }});
	GPIO__OUTPUT(TXD, {{ id[0] }}, {{ number * 4 + 3 }});
	
