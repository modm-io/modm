xpcc::xmega::BufferedUartFlow{{ id }}::readErrorFlags()
{
	return error;
}

void
xpcc::xmega::BufferedUartFlow{{ id }}::resetErrorFlags()
{
	error = 0;
}

// ----------------------------------------------------------------------------
uint8_t
xpcc::xmega::BufferedUartFlow{{ id }}::flushReceiveBuffer()
{
	uint8_t i = 0;
	while(!rxBuffer.isEmpty()) {
		rxBuffer.pop();
		++i;
	}
	
	uint8_t c;
	while (USART{{ id }}_STATUS & USART_RXCIF_bm) {
		c = USART{{ id }}_DATA;
	}
	
	return i;
}

