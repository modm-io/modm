	write(const uint8_t *data, std::size_t length);
	
	static bool
	isWriteFinished();
	
	// MARK: read
	static bool
	read(uint8_t& data);
	
	static std::size_t
	read(uint8_t *buffer, std::size_t length);
	
	// MARK: discard
