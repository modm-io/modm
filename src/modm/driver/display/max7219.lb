def init(module):
    module.parent = "driver"
    module.name = "max7219"
    module.description = "MAX7219 Display"


def prepare(module, options):
    module.depends(
        ":architecture:spi",
        ":ui:display")
    return True


def build(env):
    env.outbasepath = "modm/src/modm/driver/display"
    env.copy("max7219.hpp")
    env.copy("max7219_matrix.hpp")
    env.copy("max7219_matrix_horizontal.hpp")
