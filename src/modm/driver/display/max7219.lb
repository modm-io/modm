def init(module):
    module.parent = "driver"
    module.name = "max7219"

def prepare(module, options):
    module.depends(
        ":architecture:spi",
        ":ui:display")
    return True

def build(env):
    env.outbasepath = "src/modm/driver/display"
    env.copy("max7219matrix.hpp")
