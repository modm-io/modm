def init(module):
    module.parent = "board"
    module.name = "nucleo-h743zi"
    module.description = """\
# NUCLEO-H743ZI

Nucleo kit for STM32H743ZI
http://www.st.com/en/evaluation-tools/nucleo-h743zi.html
"""

def prepare(module, options):
    if options[":target"].partname != "stm32h743zit":
        return False

    module.depends(":platform:core", ":platform:gpio", ":platform:clock", ":platform:uart:3",
                   ":debug", ":architecture:clock")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/board"
    env.substitutions = {"board_has_logger": True}
    env.template("../board.cpp.in", "board.cpp")
    env.copy('.')
    env.copy("../nucleo144_arduino.hpp", "nucleo144_arduino.hpp")
    env.add_metadata("openocd.configfile", "board/st_nucleo_h7.cfg");
