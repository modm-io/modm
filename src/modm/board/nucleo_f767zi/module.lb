def init(module):
    module.name = ":board:nucleo-f767zi"
    module.description = """\
# NUCLEO-F767ZI

[Nucleo kit for STM32F767ZI](https://www.st.com/en/evaluation-tools/nucleo-f767zi.html)
"""

def prepare(module, options):
    if not options[":target"].partname.startswith("stm32f767zi"):
        return False

    module.depends(
        ":architecture:clock",
        ":debug",
        ":platform:clock",
        ":platform:core",
        ":platform:gpio",
        ":platform:uart:3")

    return True

def build(env):
    env.outbasepath = "modm/src/modm/board"
    env.substitutions = {
        "with_logger": True,
        "with_assert": env.has_module(":architecture:assert")
    }
    env.template("../board.cpp.in", "board.cpp")
    env.copy('.')
    env.copy("../nucleo144_arduino.hpp", "nucleo144_arduino.hpp")
    env.collect(":build:openocd.source", "board/st_nucleo_f7.cfg");
