def init(module):
    module.name = ":board:blue-pill"
    module.description = """\
# Blue Pill

STM32F103C8T6 "Blue Pill" Minimum System Development Board

Cheap and bread-board-friendly board for STM32 F1 series.
Sold for less than 2 USD on well known Internet shops from China.

http://wiki.stm32duino.com/index.php?title=Blue_Pill
"""

def prepare(module, options):
    if options[":target"].partname != "stm32f103c8t":
        return False

    module.depends(
        ":architecture:clock",
        ":platform:clock",
        ":platform:core",
        ":platform:gpio")

    module.add_option(
        EnumerationOption(
            name="stlink_version", enumeration=["2", "2-1"],
            default="2",
            description="# Version of stlink to use"
        ))
    return True

def build(env):
    env.outbasepath = "modm/src/modm/board"
    env.substitutions = {"board_has_logger": False}
    env.template("../board.cpp.in", "board.cpp")
    env.copy('.')

    env.outbasepath = "modm/openocd/modm/board/"
    env.template(repopath("tools/openocd/modm/stm32f103_blue_pill.cfg.in"), "stm32f103_blue_pill.cfg")
    env.collect(":build:openocd.source", "modm/board/stm32f103_blue_pill.cfg")
