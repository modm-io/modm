def init(module):
    module.name = "board.disco-f303vc"

def prepare(module, options):
    if options[":target"].partname != "stm32f303vct":
        return False

    module.depends(
        ":driver:l3gd20",
        ":driver:lsm303a",
        ":platform:clock",
        ":platform:core",
        ":platform:gpio",
        ":platform:i2c.bitbang",
        ":platform:spi:1")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/board"
    env.substitutions = {"board_has_logger": False}
    env.template("../board.cpp.in", "board.cpp")
    env.copy('.', ignore=env.ignore_patterns("*.lb", "*.cfg", "*.xml"))
    env.append_metadata_unique("openocd.configfile", "board/stm32f3discovery.cfg");
