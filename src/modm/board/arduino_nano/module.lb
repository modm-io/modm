def init(module):
    module.name = ":board:arduino-nano"
    module.description = "Arduino NANO"

def prepare(module, options):
    if not options[":target"].partname.startswith("atmega328p"):
        return False

    module.depends(
        ":architecture:clock",
        ":architecture:interrupt",
        ":debug",
        ":platform:clock",
        ":platform:core",
        ":platform:gpio",
        ":platform:uart:0")
    return True

def build(env):
    env.outbasepath = "modm/src/modm/"
    env.copy(localpath("../arduino_uno"), "board")
    env.collect(":build:default.avrdude.programmer", "arduino");
    env.collect(":build:default.avrdude.baudrate", "115200");
    env.collect(":build:default.avrdude.lfuse", "0xFF");
    env.collect(":build:default.avrdude.hfuse", "0xDA");
    env.collect(":build:default.avrdude.efuse", "0xFD");