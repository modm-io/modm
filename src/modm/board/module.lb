def init(module):
    module.name = ":board"
    module.description = FileReader("module.md")

def prepare(module, options):
	# The modm_abandon function uses delay functions
    module.depends(":architecture:delay")
    return True

def build(env):
    env.outbasepath = "modm/src/modm"
    env.copy("board.hpp")
