def init(module):
    module.name = "can.common"
    module.parent = "platform"

def prepare(module, options):
    module.depends(":architecture:clock")
    return True

def build(env):
    env.outbasepath = "src/modm/platform/can"
    env.copy("can_bit_timings.hpp")
