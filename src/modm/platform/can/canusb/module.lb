def init(module):
    module.name = "canusb"
    module.parent = "platform"


def prepare(module, options):
    if not options[":target"].has_driver("can:canusb"):
        return False

    module.depends(
        ":architecture:can",
        ":debug",
        ":driver:lawicel",
        ":processing:timer")
    return True


def build(env):
    device = env[":target"]
    driver = device.get_driver("can:canusb")

    properties = device.properties
    properties["target"] = target = device.identifier
    properties["partname"] = device.partname
    properties["driver"] = driver

    env.substitutions = properties
    env.outbasepath = "src/modm/platform/can"

    if env[":target"].partname == "hosted-linux":
        env.append_metadata("required_library", "pthread")

    env.copy("canusb.hpp")
    env.copy("canusb_impl.hpp")
