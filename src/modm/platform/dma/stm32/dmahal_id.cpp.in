void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::setTransferLength(uint16_t length)
{
	{{ length }} = length;
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::setIncrement(Interface::PeripheralIncrementMode p, Interface::MemoryIncrementMode m)
{
	{{ reg }} = ({{ reg }} & ~({{ reg_prefix }}_PINC_Msk | {{ reg_prefix }}_MINC_Msk)) | static_cast<uint32_t>(p) | static_cast<uint32_t>(m);
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::setPriority(Interface::Priority p)
{
	uint8_t priorityValues[4] = {0b00, 0b01, 0b10, 0b11};
	{{ reg }} = ({{ reg }} & ~{{ reg_prefix }}_PINC_Msk) | (priorityValues[static_cast<uint32_t>(p)] << {{ reg_prefix }}_PL_Pos);
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::setMode(Interface::Mode m)
{
	{{ reg }} &= ~{{ reg_prefix }}_CIRC_Msk;
	switch(m) {
		%% if feature["circular_mode"]
		case Mode::CircularMode:
			{{ reg }} |= {{ reg_prefix }}_CIRC;
			break;
		%% endif
		case Mode::Normal:
		default:
			// nothing to do
			break;
	}
}

bool
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::acquire(Interface::Context* context)
{
	(void) context;
	return true;
	// waits until isFinished() (if any transfer has ever been started)
	// stores the context once another driver acquires
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::releaseLater()
{
	// releases instantly, DMA transfer may still be active
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::stop()
{
	{{ reg }} &= ~{{ reg_prefix }}_EN;
	while({{ reg }} & {{ reg_prefix }}_EN); // wait for slot to be stopped
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::start()
{
	// Reset TCIF
%% if type == "stm32-stream-channel"
%% if slot_id <= 3
	{{ instance }}->LISR &= ~DMA_LISR_TCIF{{ slot_id }}; 
%% else
	{{ instance }}->HISR &= ~DMA_HISR_TCIF{{ slot_id }}; 
%% endif
%% else
	// TODO
%% endif

	{{ reg }} |= {{ reg_prefix }}_EN;
}

bool
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::isFinished()
{
%% if type == "stm32-stream-channel"
%% if slot_id <= 3
	return ({{ instance }}->LISR & DMA_LISR_TCIF{{ slot_id }}); 
%% else
	return ({{ instance }}->HISR & DMA_HISR_TCIF{{ slot_id }}); 
%% endif
%% else
	// TODO L4/F3/...
	return false;
%% endif
/* old code:
%% if target["family"] == "f4"
	return !({{ reg }} & {{ reg_prefix }}_EN);
%% else
	return (DMA{{ id }}->ISR & DMA_ISR_TCIF{{ slot_id }});
%% endif
*/
}

void
modm::platform::DmaHal{{ id }}::Slot{{ slot_id }}::connect(Interface::Peripheral p)
{
%% if not type == "stm32-channel"
	switch(p) {
		%% for p, r in peripherals_available[slot_id].items()
		case Peripheral::{{ p }}:
			%% if type == "stm32-stream-channel"
			{{ reg }} = ({{ reg }} & ~{{ reg_prefix }}_CHSEL_Msk) | ({{ r }} << {{ reg_prefix }}_CHSEL_Pos);
			%% elif type == "stm32-channel-request"
			{{ cselr }} = ({{ cselr }} & ~DMA_CSELR_C{{ slot_id }}S_Msk) | ({{ r }} << DMA_CSELR_C{{ slot_id }}S_Pos);
			%% endif
			break;
		%% endfor
		default:
			break;
	}
%% else
	(void) p;
	// this STM32 device has an OR-gate instead of a programmable request mux
%% endif
}

