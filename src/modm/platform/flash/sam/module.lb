def init(module):
    module.name = ":platform:flash"
    module.description = "Flash Memory"

def prepare(module, options):
    device = options[":target"]
    if not device.identifier.platform == "sam" or not device.has_driver("core"):
        return False

    module.depends(":cmsis:device",
                   ":architecture:block.device",
                   ":architecture:register")
    return True

def build(env):
    target = env[":target"].identifier
    core = listify(env[":target"].get_driver("core"))
    flash = next(filter(lambda m: m["name"] == "flash", core[0]["memory"]))

    env.substitutions = {
        "start": int(flash["start"], 16) + 0x2000,  # Adjust for bootloader.
        "size": int(flash["size"]) - 0x2000,
    }
    env.outbasepath = "modm/src/modm/platform/flash"
    env.template("flash.hpp.in")
    env.template("flash.cpp.in")
