%% if options.behavior == "reset"
#include "../device.hpp"
extern "C" void _nvicSystemReset()
{
	NVIC_SystemReset();
}
%% else
#include "../gpio/gpio_{{ options.behavior }}.hpp"

extern "C" void _initHardFaultHandlerLed()
{
	modm::platform::Gpio{{ options.behavior }}::setOutput();
}
extern "C" void _toggleHardFaultHandlerLed()
{
	modm::platform::Gpio{{ options.behavior }}::toggle();
}
%% endif