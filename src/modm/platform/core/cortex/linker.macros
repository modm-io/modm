%% macro section_rom(memory)
	.text :
	{
		*(.text .text.* .gnu.linkonce.t.*)
	} >{{memory}}

	.rodata :
	{
		*(.rodata .rodata.* .gnu.linkonce.r.*)
		KEEP(*(.init))

		. = ALIGN(4);
		__init_array_start = .;
		KEEP(*(SORT(.init_array.*)))
		KEEP(*(.init_array))
		. = ALIGN(4);
		__init_array_end = .;
	%% if 0
		__fini_array_start = .;
		KEEP(*(.fini_array))
		KEEP(*(SORT(.fini_array.*)))
		. = ALIGN(4);
		__fini_array_end = .;
	%% endif

		__hardware_init_start = .;
		/* Table symbols are alphabetically sorted! */
		KEEP(*(SORT(.hardware_init.order_*)))
		KEEP(*(SORT(.hardware_init)))
		. = ALIGN(4);
		__hardware_init_end = .;

		__assertion_table_start = .;
		KEEP(*(.assertion))
		. = ALIGN(4);
		__assertion_table_end = .;

		__build_id = .;
		KEEP(*(.note.gnu.build-id))
	} >{{memory}}

	%% if with_cpp_exceptions
	.exidx :
	{
		. = ALIGN(4);
		__exidx_start = .;
		*(.ARM.exidx* .gnu.linkonce.armexidx.*)
		. = ALIGN(4);
		__exidx_end = .;
	} >{{memory}}

	.extab :
	{
		*(.ARM.extab* .gnu.linkonce.armextab.*)
		KEEP(*(.eh_frame*))
	} >{{memory}}
	%% else
	/* Unwind tables are used to unwind the stack for C++ exceptions. Even
	 * though we disabled exceptions, pre-compiled libraries such as libstdc++
	 * still have to raise exceptions. */
	/DISCARD/ :
	{
		*(.ARM.extab* .gnu.linkonce.armextab.*)
		*(.ARM.exidx* .gnu.linkonce.armexidx.*)
		*(.eh_frame*)
	}
	%% endif
	%% if not with_heap
	/DISCARD/ :
	{
		/* See `modm:platform:heap` module for an explanation! */
		*({{no_heap_section}})
	}
	%% endif
%% endmacro


%% macro section_ram(memory, rom, sections_data=[], sections_bss=[])
	.data :
	{
		. = ALIGN(4);
		__data_load = LOADADDR(.data);
		__data_start = .;
		*(.data .data.* .gnu.linkonce.d.*)
		. = ALIGN(4);
	} >{{memory}} AT >{{rom}}

	%% for section in sections_data
	.{{section}} :
	{
		__{{section}}_load = LOADADDR(.{{section}});
		__{{section}}_start = .;
		*(.{{section}} .{{section}}.*)
		. = ALIGN(4);
		__{{section}}_end = .;
	} >{{memory}} AT >{{rom}}
	%% endfor
	__data_end = .;

	.bss (NOLOAD) :
	{
		__bss_start = . ;
		*(.bss .bss.* .gnu.linkonce.b.*)
		. = ALIGN(4);
		__bss_end = .;
	} >{{memory}}

	%% for section in sections_bss
	.{{section}} (NOLOAD) :
	{
		__{{section}}_start = . ;
		*(.{{section}} .{{section}}.*)
		. = ALIGN(4);
		__{{section}}_end = .;
	} >{{memory}}
	%% endfor
	__bss_end = .;

	.noinit (NOLOAD) :
	{
		__noinit_start = .;
		*(.noinit .noinit.*)
		. = ALIGN(4);
		__noinit_end = .;
	} >{{memory}}
%% endmacro


%% macro section_rom_start(rom)
	__rom_start = ORIGIN({{rom}});
%% endmacro

%% macro section_rom_end(rom)
	. = ALIGN(4);
	__rom_end = .;
%% endmacro


%% macro section_debug()
	/* DWARF debug sections */
	.debug_abbrev   0 : { *(.debug_abbrev) }
	.debug_aranges  0 : { *(.debug_aranges) }
	.debug_frame    0 : { *(.debug_frame) }
	.debug_info     0 : { *(.debug_info) }
	.debug_line     0 : { *(.debug_line) }
	.debug_loc      0 : { *(.debug_loc) }
	.debug_macinfo  0 : { *(.debug_macinfo) }
	.debug_pubnames 0 : { *(.debug_pubnames) }
	.debug_pubtypes 0 : { *(.debug_pubtypes) }
	.debug_ranges   0 : { *(.debug_ranges) }
	.debug_str      0 : { *(.debug_str) }

	.comment 0 : { *(.comment) }
	.ARM.attributes 0 : { KEEP(*(.ARM.attributes)) }
	/DISCARD/ : { *(.note.GNU-stack)  }
%% endmacro
