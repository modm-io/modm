#ifndef MODM_AVR_SPI_MASTER{{ id }}_HPP
#define MODM_AVR_SPI_MASTER{{ id }}_HPP

#include <avr/io.h>

#include <modm/architecture/interface/spi_master.hpp>
#include <modm/math/algorithm/prescaler.hpp>
#include <modm/platform/gpio/connector.hpp>

